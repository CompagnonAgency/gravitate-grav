<!DOCTYPE html>
<html lang="en">
  <head>
  {% set theme_config = attribute(config.themes, config.system.pages.theme) %}

  {% block head %}
      <meta charset="utf-8" />
      <title>
        {% if header.title %}{{ header.title|e('html') }} | {% endif %}
        {{ site.title|e('html') }}
      </title>
      {% include 'partials/metadata.html.twig' %}
      <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
      <link rel="icon" type="image/ico" href="{{ url('theme://images/favicon.ico', true) }}" />
      <link rel="canonical" href="{{ page.url(true, true) }}" />
      <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
      {% block stylesheets %}
        {% do assets.addCss('theme://css/application.min.css',101) %}
      {% endblock %}
      {{ assets.css() }}
  {% endblock head%}
  </head>
  <body>
    {% block body %}
      {% block content %}{% endblock %}
    {% endblock %}
    {% block javascripts %}
      {% do assets.addJs('theme://js/components/jquery/dist/jquery.min.js') %}
      {% do assets.addJs('theme://js/dist/application.min.js') %}
    {% endblock %}
    {{ assets.js() }}
  </body>
</html>
